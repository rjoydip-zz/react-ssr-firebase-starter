{
  "name": "react-ssr-firebase-starter",
  "version": "1.0.0",
  "description": "Express SSR firebase starter",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node functions/index.js",
    "firebase": "node_modules/.bin/firebase",
    "mkfuncdir": "mkdir functions",
    "copy": "npm run mkfuncdir && cp index.html functions/ && cp package.tmpl.json functions/package.json",
    "build": "yarn clean && npm run copy && node_modules/.bin/babel src -d functions/src && node_modules/.bin/babel index.js -d functions",
    "clean": "rm -rf functions && rm -rf .firebase",
    "deploy:staging": "yarn build && npm run firebase use staging && npm run firebase deploy"
  },
  "keywords": [
    "firebase",
    "fastify",
    "cloud",
    "hosting"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "fastify": "^1.12.1",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/plugin-transform-modules-commonjs": "^7.0.1",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "firebase-tools": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.21.0"
  }
}
